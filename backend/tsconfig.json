{
    "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "typeRoots": ["./node_modules/@types", "./types"]
  },
  "include": [
    "src/types/express.d.ts",
    "src/**/*.ts"
  ],
  "exclude": ["node_modules", "**/*.test.ts"]
}